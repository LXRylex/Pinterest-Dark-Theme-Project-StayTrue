{
  "manifest_version": 3,
  "name": "Pinterest AMOLED Theme",
  "version": "1.0.8",
  "description": "Forces Pinterest to use a pure AMOLED black theme that actually works",
  "author": "Yuilix",
  "icons": {
    "16": "Pinterest.png",
    "32": "Pinterest.png",
    "48": "Pinterest.png",
    "128": "Pinterest.png"
  },
  "action": {
    "default_title": "True AMOLED - Pinterest",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "Pinterest.png",
      "32": "Pinterest.png"
    }
  },
  "permissions": ["storage","downloads"],
  "host_permissions": ["*://*.pinterest.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["toggle-amoled.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["amoled.css","gray.css"],
      "matches": ["*://*.pinterest.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "pinterest-amoled@yuilix.dev",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}